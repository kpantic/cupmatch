= simple_form_for @cup, :html => {:multipart => true} do |f|
  - if @cup.errors.any?
    #error_explanation
      %h2
        = pluralize(@cup.errors.count, "error") 
        prohibited this cup from being saved:
      %ul
        - @cup.errors.full_messages.each do |msg|
          %li
            = msg
  = f.input :image, :error => false
  %br
  %br
  = f.input :name, :error => false
  %br
  %br
  = f.input :year_started, :as => :select, :collection => YEARS, :error => false
  %br
  %br
  = f.input :country, :as => :select, :collection => COUNTRIES, :error => false
  %br
  %br
  = f.input :frequency, :as => :select, :collection => Cup::FREQUENCY_OPTIONS, :error => false
  %br
  %br
  .submit-button
    = f.button :submit

